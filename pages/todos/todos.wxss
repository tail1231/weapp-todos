/* pages/todos/todos.wxss */
.search {
    margin: 20rpx;
    border: 1rpx solid #ccc;
    box-shadow: 0 0 5rpx #ccc;
    border-radius: 10rpx;
    display:flex;
    align-items: center;
    padding: 10rpx 10rpx 10rpx 5rpx;
}
.search image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}
.todos {
    margin: 20rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #ccc;
}
.todos .item {
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
    display: flex;
    align-items: center;
}
.todos .item:last-child {
    border: 0; 
}
.todos .item text {
    flex:1;
    font-size: 30rpx;
    color: #444;
    margin-left: 20rpx;
}
.todos .item.completed text {
    color: #888;
    text-decoration: line-through;
}
.footer {
    font-size: 30rpx;
    margin: 20rpx;
    display: flex;
    justify-content: space-between;
    color: #333;
}